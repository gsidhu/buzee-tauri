{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "path:default",
    "event:default",
    "window:default",
    "app:default",
    "resources:default",
    "menu:default",
    "tray:default",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "args": [
            {
              "validator": "\\S+"
            }
          ],
          "cmd": "",
          "name": "binaries/test",
          "sidecar": true
        },
        {
          "args": [
            {
              "validator": "\\S+"
            },
            "-o",
            {
              "validator": "\\S+"
            }
          ],
          "cmd": "",
          "name": "binaries/textra",
          "sidecar": true
        },
        {
          "args": [
            "-i",
            {
              "validator": "\\S+"
            },
            "-o",
            {
              "validator": "\\S+"
            },
            "--poppler-path",
            {
              "validator": "\\S+"
            }	
          ],
          "cmd": "",
          "name": "binaries/winocr",
          "sidecar": true
        }
      ]
    },
    "shell:allow-open"
  ]
}